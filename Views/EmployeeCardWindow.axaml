<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:input="using:Avalonia.Input"
        x:Class="MyApp.Views.EmployeeCardWindow"
        Title="Карточка сотрудника"
        Width="500" Height="650"
        MinWidth="500" MinHeight="650"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto">
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" x:Name="WindowTitleText" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        
        <!-- Кнопки -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Сохранить" Click="Save_Click" Width="120" Height="35" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button Grid.Column="2" Content="Отмена" Click="Cancel_Click" Width="120" Height="35" 
                    Background="#666" Foreground="White"/>
        </Grid>

        <!-- Основная информация -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <TextBlock Text="Основная информация" FontWeight="SemiBold" FontSize="14" Foreground="#666"/>
        </Border>

        <!-- Полное имя -->
        <Grid Grid.Row="3" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Полное имя:" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox Grid.Column="1" x:Name="FullNameTextBox" Height="35" Padding="10,0" 
                     Watermark="Введите ФИО сотрудника"/>
        </Grid>

        <!-- Логин -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Логин:" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox Grid.Column="1" x:Name="UsernameTextBox" Height="35" Padding="10,0" 
                     Watermark="Введите логин для входа"/>
        </Grid>

        <!-- Пароль -->
        <Grid Grid.Row="5" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Пароль:" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox Grid.Column="1" x:Name="PasswordTextBox" Height="35" Padding="10,0" 
                     PasswordChar="•" Watermark="Введите пароль"/>
        </Grid>

        <!-- Роль -->
        <Grid Grid.Row="6" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Роль:" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <ComboBox Grid.Column="1" x:Name="RoleComboBox" Height="35" Padding="10,0"/>
        </Grid>

        <!-- Файлы -->
        <Border Grid.Row="7" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <TextBlock Text="Документы" FontWeight="SemiBold" FontSize="14" Foreground="#666"/>
        </Border>

        <!-- Фото -->
        <Grid Grid.Row="8" Margin="0,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Фото сотрудника:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10">
                <Border x:Name="PhotoDropBorder"
                        input:DragDrop.AllowDrop="True"
                        Background="LightGray"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="8"
                        Width="120" Height="120"
                        Cursor="Hand">
                    <TextBlock x:Name="PhotoTextBlock"
                               Text="Перетащите&#10;фото сюда"
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="10"/>
                </Border>
                <StackPanel VerticalAlignment="Center" Spacing="5">
                    <Button Content="Выбрать фото" Click="AddPhoto_Click" Width="120"/>
                    <Button x:Name="RemovePhotoButton" Content="Удалить фото" Click="RemovePhoto_Click" Width="120" 
                            Background="#FF4444" Foreground="White" IsVisible="False"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Договор -->
        <Grid Grid.Row="9" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Трудовой договор:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10">
                <Border x:Name="ContractDropBorder"
                        input:DragDrop.AllowDrop="True"
                        Background="LightGray"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="8"
                        Width="120" Height="120"
                        Cursor="Hand">
                    <TextBlock x:Name="ContractTextBlock"
                               Text="Перетащите&#10;договор сюда"
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="10"/>
                </Border>
                <StackPanel VerticalAlignment="Center" Spacing="5">
                    <Button Content="Выбрать договор" Click="AddContract_Click" Width="120"/>
                    <Button x:Name="RemoveContractButton" Content="Удалить договор" Click="RemoveContract_Click" Width="120"
                            Background="#FF4444" Foreground="White" IsVisible="False"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Сообщения об ошибках -->
        <TextBlock Grid.Row="10" x:Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap" 
                   Margin="0,10,0,10" MaxHeight="50" TextAlignment="Center"/>
    </Grid>
</Window>