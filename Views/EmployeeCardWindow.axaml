<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyApp.Views.EmployeeCardWindow"
        Title="Карточка сотрудника"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        Background="#F2F2F5">

    <!-- Стили внутри окна -->
    <Window.Styles>

        <!-- Hover без изменения цвета -->
        <Style Selector="Button:pointerover">
            <Setter Property="Background"
                    Value="{Binding Background, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>

        <!-- Нажатие — легкое затемнение -->
        <Style Selector="Button:pressed">
            <Setter Property="Opacity" Value="0.95"/>
        </Style>

    </Window.Styles>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" x:Name="WindowTitleText"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 15"
                   Foreground="#333"/>

        <!-- Основная информация -->
        <TextBlock Grid.Row="1"
                   Text="Основная информация"
                   FontWeight="SemiBold"
                   FontSize="16"
                   Foreground="#666"
                   Margin="0 0 0 10"/>

        <!-- Full name -->
        <StackPanel Grid.Row="2" Spacing="4" Margin="0 0 0 12">
            <TextBlock Text="Полное имя:" FontWeight="SemiBold" FontSize="14" Foreground="#555"/>
            <TextBox x:Name="FullNameTextBox" Height="40" Padding="12,0"
                     Background="#FAFAFA" BorderBrush="#D9D9D9" BorderThickness="1"
                     CornerRadius="8" VerticalContentAlignment="Center"
                     Watermark="Введите ФИО сотрудника"/>
        </StackPanel>

        <!-- Username -->
        <StackPanel Grid.Row="3" Spacing="4" Margin="0 0 0 12">
            <TextBlock Text="Логин:" FontWeight="SemiBold" FontSize="14" Foreground="#555"/>
            <TextBox x:Name="UsernameTextBox" Height="40" Padding="12,0"
                     Background="#FAFAFA" BorderBrush="#D9D9D9" BorderThickness="1"
                     CornerRadius="8" VerticalContentAlignment="Center"
                     Watermark="Введите логин для входа"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="4" Spacing="4" Margin="0 0 0 12">
            <TextBlock Text="Пароль:" FontWeight="SemiBold" FontSize="14" Foreground="#555"/>
            <TextBox x:Name="PasswordTextBox" Height="40" Padding="12,0"
                     Background="#FAFAFA" BorderBrush="#D9D9D9" BorderThickness="1"
                     CornerRadius="8" VerticalContentAlignment="Center"
                     PasswordChar="•"
                     Watermark="Введите пароль"/>
        </StackPanel>

        <!-- Role -->
        <StackPanel Grid.Row="5" Spacing="4" Margin="0 0 0 25">
            <TextBlock Text="Роль:" FontWeight="SemiBold" FontSize="14" Foreground="#555"/>
            <ComboBox x:Name="RoleComboBox" Height="40" Padding="10,0"
                      Background="#FAFAFA" BorderBrush="#D9D9D9" BorderThickness="1"
                      CornerRadius="8"/>
        </StackPanel>

        <!-- Документы -->
        <TextBlock Grid.Row="6"
                   Text="Документы"
                   FontWeight="SemiBold"
                   FontSize="16"
                   Foreground="#666"
                   Margin="0 0 0 10"/>

        <!-- Photo -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" Spacing="15" Margin="0 5 0 15">
            <Border x:Name="PhotoDropBorder"
                    Width="130" Height="130"
                    Background="LightGray"
                    BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="12"
                    Cursor="Hand"
                    DragDrop.AllowDrop="True">
                <TextBlock x:Name="PhotoTextBlock"
                           Text="Перетащите&#x0a;фото сюда"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="10"/>
            </Border>

            <StackPanel VerticalAlignment="Center" Spacing="8">

                <!-- Select photo -->
                <Button Content="Выбрать фото"
                        Click="AddPhoto_Click"
                        Width="130" Height="38"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="SemiBold"
                        CornerRadius="8"/>

                <!-- Remove photo -->
                <Button x:Name="RemovePhotoButton"
                        Content="Удалить фото"
                        Click="RemovePhoto_Click"
                        Width="130" Height="38"
                        Background="#f44336"
                        Foreground="White"
                        FontWeight="SemiBold"
                        CornerRadius="8"
                        IsVisible="False"/>
            </StackPanel>
        </StackPanel>

        <!-- Contract + Buttons -->
        <Grid Grid.Row="8" Margin="0 0 0 25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Contract -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                <Border x:Name="ContractDropBorder"
                        Width="130" Height="130"
                        Background="LightGray"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="12"
                        Cursor="Hand"
                        DragDrop.AllowDrop="True">
                    <TextBlock x:Name="ContractTextBlock"
                               Text="Перетащите&#x0a;договор сюда"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="10"/>
                </Border>

                <StackPanel VerticalAlignment="Center" Spacing="8">

                    <Button Content="Выбрать договор"
                            Click="AddContract_Click"
                            Width="130" Height="38"
                            Background="#2196F3"
                            Foreground="White"
                            FontWeight="SemiBold"
                            CornerRadius="8"/>

                    <Button x:Name="RemoveContractButton"
                            Content="Удалить договор"
                            Click="RemoveContract_Click"
                            Width="130" Height="38"
                            Background="#f44336"
                            Foreground="White"
                            FontWeight="SemiBold"
                            CornerRadius="8"
                            IsVisible="False"/>
                </StackPanel>
            </StackPanel>

            <!-- Save + Cancel -->
            <StackPanel Grid.Column="2"
                        Orientation="Vertical"
                        Spacing="15"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="20 0 0 0">

                <Button Content="Сохранить"
                        Click="Save_Click"
                        Width="150" Height="50"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        CornerRadius="10"/>

                <Button Content="Отмена"
                        Click="Cancel_Click"
                        Width="150" Height="50"
                        Background="#666"
                        Foreground="White"
                        FontSize="16"
                        CornerRadius="10"/>
            </StackPanel>
        </Grid>

        <!-- Ошибки -->
        <TextBlock Grid.Row="9" x:Name="ErrorTextBlock"
                   Foreground="Red"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   VerticalAlignment="Top"
                   MaxHeight="60"
                   Margin="0 10 0 10"/>
    </Grid>
</Window>
